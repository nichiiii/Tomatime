{
    "manifest_version" : 3,
    "name" : "Tomatime",
    "description" : "A pomodoro timer extension",
    "version" : "1.0",

    "action" : {
        "default_popup" : "popup/popup.html"
    },

    "background" : {
        "scripts" : ["background.js"],
        "type" : "module"
    },

    "permissions" : [
        "storage"
    ]

}